<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist %>
  <%= f.text_field :artist_name, id: 'song_artist_name' %>
  <%= f.label :genre %>
  <%= select(:song, :genre_id, @genres) %><br><br>
Notes:
<ul>
<%= f.fields_for :notes do |n| %>
<li>
  <%= n.label :note_1 %>
  <%= n.text_field :notes_1, id: 'song_notes_1' %>
  <%= n.label :note_2 %>
  <%= n.text_field :notes_2, id: 'song_notes_2' %>
  </li>
  <% end%>
  </ul>



  <br />

  <%= f.submit %>
<% end %>